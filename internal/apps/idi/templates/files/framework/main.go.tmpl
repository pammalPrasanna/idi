package main

import (
	"fmt"
	"os"
	"runtime/debug"

	"{{.ProjectName}}/cmd/api"
	"{{.ProjectName}}/internal/lib"
)

func main() {
	idi, err := lib.Idi()
	if err != nil {
		fmt.Println(err)
		trace := string(debug.Stack())
		fmt.Println(trace)
		os.Exit(1)
	}

	{{if (ne .DBName "")}}
	// handle DB close on application exit
	defer func() {
		if err := idi.{{capitalize .DBName}}().Close(); err != nil {
			idi.Logger().Error("unable to close {{capitalize .DBName}}", "{{capitalize .DBName}}.Close()", err)
		} else {
			idi.Logger().Info("closed {{capitalize .DBName}} successfully")
		}
	}()
	{{end}}

	err = api.Main(idi)
	if err != nil {
		trace := string(debug.Stack())
		idi.Logger().Error("error: ", err)
		idi.Logger().Error(err.Error(), "trace", trace)
		os.Exit(1)
	}
}

